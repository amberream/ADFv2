<?xml version="1.0" encoding="utf-8"?>
<com.android.support.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="1"
    android:columnCount="3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_donut"
        android:contentDescription="@string/donut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startDonutActivity"
        app:srcCompat="@drawable/donut_circle" />

    <ImageView
        android:id="@+id/imageView_froyo"
        android:contentDescription="@string/froyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startFroyoActivity"
        app:srcCompat="@drawable/froyo_circle" />

    <ImageView
        android:id="@+id/imageView_icecream"
        android:contentDescription="@string/ice_cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startIceCreamActivity"
        app:srcCompat="@drawable/icecream_circle" />
</com.android.support.GridLayout>